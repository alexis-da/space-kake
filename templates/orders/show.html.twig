{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block main %}
    <h1>Mon panier</h1>

    {% if cart %}
        <form method="POST" action="{{ path('orders_update') }}">
            <table class="table">
                <thead>
                <tr>
                    <th>Gâteau</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in cart %}
                    <tr>
                        <td>{{ item.cake.title }}</td>
                        <td>
                            <select name="{{ item.id }}" class="form-select">
                                {% for i in 1..item.cake.quantity + item.getQuantityCake() %}
                                    <option value="{{ i }}" {% if i == item.getQuantityCake() %}selected{% endif %}>{{ i }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td>{{ item.cake.price }}</td>
                        <td>{{ item.getQuantityCake() * item.cake.price }}</td>
                        <td>
                            <a href="{{ path('orders_remove', {'id': item.cake.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Mettre à jour le panier</button>
        </form>

        <p><strong>Total du panier : </strong> {{ order.totalPrice }}</p>
    {% else %}
        <div class="alert alert-warning">Votre panier est vide.</div>
    {% endif %}
{% endblock %}
