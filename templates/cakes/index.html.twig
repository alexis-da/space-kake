{% extends 'base.html.twig' %}

{% block title %}Liste des Cakes{% endblock %}

{% block main %}
    <h1>Cakes index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Note</th>
            <th>Image</th>
            {% if app.user and app.user.isAdmin %}
            <th>Actions</th>
            {% endif %}
            <th>Ajouter au panier</th>
        </tr>
        </thead>
        <tbody>
        {% for cake in cakes %}
            <tr>
                <td>{{ cake.title }}</td>
                <td>{{ cake.description }}</td>
                <td>{{ cake.price }}</td>
                <td>{{ cake.quantity }}</td>
                <td>
                    {% set averageRating = cake.getAverageRating() %}
                    {% if averageRating > 0 %}
                        <div class="rating-display">
                            <span class="rating-value">{{ averageRating }}/5</span>
                            <div class="stars">
                                {% for i in 1..5 %}
                                    {% if i <= averageRating %}
                                        <span class="star filled">⭐</span>
                                    {% else %}
                                        <span class="star empty">☆</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% else %}
                        <span class="no-rating text-muted">Pas encore noté</span>
                    {% endif %}
                </td>
                <td>
                    {% if cake.image %}
                        <img src="{{ cake.image }}" alt="" style="max-width: 100px;">
                    {% endif %}
                </td>
                {% if app.user and app.user.isAdmin %}
                    <td>
                        <a href="{{ path('app_cakes_show', {'id': cake.id}) }}">show</a>
                        <a href="{{ path('app_cakes_edit', {'id': cake.id}) }}">edit</a>
                        {{ include('cakes/_delete_form.html.twig') }}
                    </td>
                {% endif %}
                <td>
                    {% if cake.quantity > 0 %}
                        <form action="{{ path('app_cakes_add_to_cart', {'id': cake.id}) }}" method="POST">
                            <input type="number" name="quantity" value="1" min="1" max="{{ cake.quantity }}">
                            <button type="submit" class="btn btn-success btn-sm">Ajouter au panier</button>
                        </form>
                    {% else %}
                        <span class="text-danger">Rupture de stock</span>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun gâteau trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cakes_new') }}" class="btn btn-primary mt-3">Créer un nouveau gâteau</a>
{% endblock %}


